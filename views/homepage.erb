<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
	<title>MN Facts Slideshow</title>
  
  <link rel="stylesheet" href="public/mystyle.css" type="text/css" media="screen" title="no title" charset="utf-8">
  
  
  <link href='http://fonts.googleapis.com/css?family=Libre+Baskerville|Roboto:400,900' rel='stylesheet' type='text/css'>
</head>
<body>


<div id="box">
  <a href="#" id="prev_btn">&laquo;</a>
  <a href="#" id="next_btn">&raquo;</a>
	<div id="slideshow"></div>
</div>

  <script type="text/template" id="slidestpl">
  {{#slides}}
    <div class="slide">
      <h3>{{title}}</h3>
      <h4>{{body}}</h4>
    </div>
  {{/slides}}
   
  </script>


<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.cycle/2.9999.8/jquery.cycle.all.min.js" type="text/javascript"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/mustache.js/0.7.0/mustache.min.js" type="text/javascript"></script>

<script type="text/javascript">
    $(function(){
      $.getJSON('data.json', function(data){
        var template = $('#slidestpl').html();
        var html = Mustache.to_html(template, data)
        $('#slideshow').html(html);
        
        $('#slideshow').cycle({
          fx: 'fade',
          pause: 1,
          next: '#next_btn',
          prev: '#prev_btn',
          speed: 500,
          timeout: 10000
        }); //cycle
      }); //getJSON
    }); //function
</script>



</body>
</html> 